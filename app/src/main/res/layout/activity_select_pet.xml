<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA">

    <LinearLayout
        android:id="@+id/selectPetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/selectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="펫을 선택하세요"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- 산지니 -->
        <ImageView
            android:id="@+id/pet1Image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sanjini"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/pet1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산지니"
            android:layout_marginBottom="24dp" />

        <!-- 호반우 -->
        <ImageView
            android:id="@+id/pet2Image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/hobanu"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/pet2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호반우"
            android:layout_marginBottom="24dp" />

        <!-- 차차 -->
        <ImageView
            android:id="@+id/pet3Image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/chacha"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/pet3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차차"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
