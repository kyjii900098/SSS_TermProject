<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#FFFDE7">

    <!-- 상단 왼쪽: 이름과 상태 -->
    <FrameLayout
        android:id="@+id/backgroundFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:padding="25dp"
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/petNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름: ???"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="체력"/>
        <ProgressBar
            android:id="@+id/healthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginBottom="8dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="기분"/>
        <ProgressBar
            android:id="@+id/moodBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>


    <!-- 중앙 펫 이미지 -->
    <ImageView
        android:id="@+id/petImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/bird_frame1"
        android:scaleType="fitCenter"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/speechBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zzz"
        android:textSize="24sp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/petImageView"
        android:visibility="gone"
        android:padding="8dp" />
    <!-- 하단 버튼 (2x2 배치) -->
    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/talkButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="대화하기" />

        <Button
            android:id="@+id/feedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="밥주기" />

        <Button
            android:id="@+id/sleepButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="잠자기" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="저장하기" />
        <Button
            android:id="@+id/changeBackgroundButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="배경 변경하기" />
        <Button
            android:id="@+id/exitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="종료하기" />

    </GridLayout>
</RelativeLayout>
